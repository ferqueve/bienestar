# .htaccess para Bienestar Floral - Versión limpia
RewriteEngine On

# Configuración de headers unificada
<IfModule mod_headers.c>
    # CORS para APIs
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET,POST,PUT,DELETE,OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type,Authorization"
    Header always set Access-Control-Max-Age "86400"
    
    # Seguridad básica
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Manejo de preflight requests CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API Routes
RewriteRule ^api/create-order/?$ api/create-order.php [L,QSA]
RewriteRule ^api/verify-payment/?$ api/verify-payment.php [L,QSA]

# Webhook Routes
RewriteRule ^webhooks/paypal/?$ webhooks/paypal.php [L,QSA]
RewriteRule ^webhooks/mercadopago/?$ webhooks/mercadopago.php [L,QSA]

# Páginas de resultado de pago
RewriteRule ^payment-success/?$ pages/payment-success.php [L,QSA]
RewriteRule ^payment-failure/?$ pages/payment-failure.php [L,QSA]
RewriteRule ^payment-pending/?$ pages/payment-pending.php [L,QSA]

# Archivo principal
DirectoryIndex index.html

# Proteger archivos sensibles
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "database.php">
    Order Allow,Deny
    Deny from all
</Files>

<FilesMatch "\.(log|sql|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger carpetas del sistema
<IfModule mod_rewrite.c>
    RewriteRule ^vendor/.*$ - [F,L]
    RewriteRule ^\.git/.*$ - [F,L]
    RewriteRule ^\.env$ - [F,L]
</IfModule>

# Optimización de rendimiento
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Configuración PHP para HostGator
<IfModule mod_php.c>
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value post_max_size 50M
    php_value upload_max_filesize 50M
</IfModule>

# Bloquear archivos ocultos
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>